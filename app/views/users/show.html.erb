
<div class="container">

<!-- Profil Tasarımı   -->
  <div class="mx-auto mt-16 bg-white dark:bg-gray-800 flex flex-col justify-between items-center shadow-lg p-6">

    <h2 class="text-center text-3xl font-bold mb-4">
      Your Profile
    </h2>



    
    <div class="flex justify-evenly items-center w-full lg:w-1/3">
      <% if @user.avatar.attached?  %>
      <div class= "flex justify-center items-center">
        <%= image_tag user_avatar(current_user), class: "rounded-full w-36 h-36 overflow-hidden" %>
      </div>
      <% else %>
        <img src="https://avatars.githubusercontent.com/u/84380549?v=4" class="rounded-full w-36 h-36"/>
      <% end %>

      <div class="flex flex-col justify-center items-center">
        <h5 class="mb-1 text-xl text-gray-900 dark:text-white"> <span class="font-semibold"> Name: </span><%= @user.name+" "+@user.surname %></h5>
        <h5 class="mb-1 text-xl text-gray-900 dark:text-white"><span class="font-semibold"> Phone: </span> <%= @user.phone %></h5>
      </div>
    </div>

    <div class="flex w-full justify-between items-center w-full lg:w-1/4 mt-8">
      <%= link_to "Edit Profile", edit_user_registration_path, class:"flex justify-center items-center h-12 px-6 text-white text-lg transition-colors duration-150 bg-yellow-400 rounded-lg focus:shadow-outline hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 dark:focus:ring-yellow-900"%>
      <%= link_to "Sign out", destroy_user_session_path, class:"font-semibold text-lg text-yellow-500 hover:text-yellow-800 no-underline", data:{turbo_method: :delete}%>
    </div>


  </div>



  <!-- Restaurant kartları-->
  <div class="w-full mt-40 md:mx-0 mx-4">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl ">My Restaurants</h1>
      <%= link_to 'New restaurant', new_restaurant_path, class: "rounded-lg py-3 px-5 text-white block font-medium text-lg transition-colors duration-150 bg-yellow-400 rounded-lg focus:shadow-outline hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 dark:focus:ring-yellow-900" %>
    </div>

    <div id="restaurants" class="mt-16 mb-8 min-w-full grid grid-cols-1 md:grid-cols-4 space-x-3 ">
      <%= render @user.restaurants%>
    </div>
  </div>
</div>
