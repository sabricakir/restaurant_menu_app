
<div class="container">

<!-- Profil Tasarımı   -->
  <div class="mx-auto mt-16 mx-8 bg-white dark:bg-gray-800 flex flex-col justify-between items-center">
    
    <h2 class="text-center text-3xl font-bold mb-4"> 
      Your Profile
    </h2>

    <div class="flex justify-between items-center w-full lg:w-1/4">


      <%= image_tag 'https://avatars.githubusercontent.com/u/84380549?v=4', class:"w-32 h-32 rounded-full shadow-lg"%>


      <div class="flex flex-col justify-center items-center">
        <h5 class="mb-1 text-xl text-gray-900 dark:text-white"> <span class="font-semibold"> Name: </span><%= @user.name+" "+@user.surname %></h5>
        <h5 class="mb-1 text-xl text-gray-900 dark:text-white"><span class="font-semibold"> Phone: </span> <%= @user.phone %></h5>
      </div>

    </div>

    <%= link_to "Edit Profile", edit_user_registration_path, class:"w-full md:w-96 mx-auto flex justify-center items-center mt-8 h-12 px-6 text-white text-lg transition-colors duration-150 bg-yellow-400 rounded-lg focus:shadow-outline hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 dark:focus:ring-yellow-900"%>

  </div>



  <!-- Restaurant kartları-->
  <div class="w-full mt-40 md:mx-0 mx-4">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl ">My Restaurants</h1>
      <%= link_to 'New restaurant', new_restaurant_path, class: "rounded-lg py-3 px-5 text-white block font-medium text-lg transition-colors duration-150 bg-yellow-400 rounded-lg focus:shadow-outline hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 dark:focus:ring-yellow-900" %>
    </div>

    <div id="restaurants" class="mt-16 mb-8 min-w-full grid grid-cols-2 md:grid-cols-4 space-x-3 ">
      <%= render @user.restaurants%>
    </div>
  </div>

</div>