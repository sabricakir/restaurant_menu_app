<%= form_with(model: restaurant, class: "contents") do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
        <% restaurant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

   <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
   <div class="form-group" data-controller="user-avatar">

       <div class="row">
            <div class="col-12">
              <%= image_tag "pick_picture.svg", class:"w-full h-auto max-h-52 md:max-h-96 md:h-96 object-cover rounded-lg shadow-lg",data: { target: "user-avatar.output" }%>
            </div>


        </div>
        <div class="col-12 mt-3"> 
          <label class="field">
            <%= form.file_field :restaurant_image, data: {target: "user-avatar.input", action: "user-avatar#replacePhoto" }%>
          </label>
        </div>
       

    </div>
  </div>

  




  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" ,data:{turbo_action: "replace"} %>
  </div>
<% end %>
